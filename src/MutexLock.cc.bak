#include "MutexLock.h"

extern wd::Logger g_log;
namespace wd
{
MutexLock::MutexLock()
{
	if(0 != pthread_mutex_init(&mutex_,NULL))
	{
		g_log.addLog(5, "MutexLock", "pthread_mutex_init failed");
		abort();
	}
}

MutexLock::~MutexLock()
{
	if(0 != pthread_mutex_destroy(&mutex_))
	{
		g_log.addLog(5, "MutexLock", "pthread_mutex_destroy failed");
		abort();
	}
}

int MutexLock::lock()
{
	if(0 != pthread_mutex_lock(&mutex_))
	{
		g_log.addLog(5, "MutexLock", "pthread_mutex_lock failed");
		return RET_ERROR;
	}
	return RET_OK;
}

void  MutexLock::unlock()
{
	if(0 != pthread_mutex_unlock(&mutex_))
	{
		g_log.addLog(5, "MutexLock", "pthread_mutex_lock failed");
		abort();
	}

}

pthread_mutex_t* MutexLock::getMutexPtr()
{
	return &mutex_;
}
}
